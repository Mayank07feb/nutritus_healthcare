<!-- ================= Contact Section ================= -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-12">
    <div class="grid md:grid-cols-2 gap-12">

      <!-- LEFT SIDE — Nutritus Healthcare -->
      <div class="bg-primary text-white rounded-2xl p-8 md:p-12">
        <h2 class="text-3xl font-bold mb-8">Address:</h2>
        <div class="space-y-8">

          <!-- Location -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
              <span class="material-icons text-white text-3xl">location_on</span>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1">Location</h3>
              <p class="text-white/90 leading-relaxed">
                Nutritus Healthcare Pvt. Ltd., Unit No-704, 7th Floor, Palm Court, Sector-16, Gurugram, Haryana
              </p>
            </div>
          </div>

          <!-- Mobile -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
              <span class="material-icons text-white text-3xl">smartphone</span>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1">Mobile</h3>
              <p class="text-white/90">98373-49904</p>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
              <span class="material-icons text-white text-3xl">mail</span>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1">Email</h3>
              <a href="mailto:nutritushealthcarepvtltd@gmail.com" class="text-white/90 hover:text-white">
                nutritushealthcarepvtltd@gmail.com
              </a>
            </div>
          </div>

        </div>
      </div>

      <!-- RIGHT SIDE — Contact Form -->
      <div class="bg-gray-50 rounded-2xl p-8 md:p-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-8">Send Us a Message</h2>

        <form action="/submit-contact" method="POST" class="space-y-6">

          <!-- Name -->
          <div>
            <label for="name" class="block text-gray-700 font-semibold mb-2">Name</label>
            <input type="text" name="name" id="name" required
              class="w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-primary focus:outline-none">
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
            <input type="email" name="email" id="email" required
              class="w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-primary focus:outline-none">
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-gray-700 font-semibold mb-2">Phone</label>
            <input type="tel" name="phone" id="phone"
              class="w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-primary focus:outline-none">
          </div>

          <!-- Subject -->
          <div>
            <label for="subject" class="block text-gray-700 font-semibold mb-2">Subject</label>
            <input type="text" name="subject" id="subject"
              class="w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-primary focus:outline-none">
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-gray-700 font-semibold mb-2">Message</label>
            <textarea name="message" id="message" rows="5" required
              class="w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-primary focus:outline-none"></textarea>
          </div>

          <!-- Submit Button -->
          <div>
            <button type="submit"
              class="bg-primary hover:bg-primary/90 text-white font-bold py-3 px-6 rounded-xl transition-colors w-full">
              Send Message
            </button>
          </div>

        </form>
      </div>

    </div>
  </div>
</section>

