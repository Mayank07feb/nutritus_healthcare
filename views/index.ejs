<script>
  const slider = document.getElementById('slider');
  const template = document.getElementById('slider-items');
  const images = [
    '/assets/img/Product-1.png',
    '/assets/img/Product-2.png',
    '/assets/img/Product-3.png',
    '/assets/img/Product-4.png'
  ];

  // Create slider items dynamically and duplicate for infinite loop
  images.concat(images).forEach(src => {
    const clone = template.content.cloneNode(true);
    clone.querySelector('img').src = src;
    slider.appendChild(clone);
  });

  let translateX = 0;

  function animateSlider() {
    translateX -= 1; // speed
    if (Math.abs(translateX) >= slider.scrollWidth / 2) translateX = 0;
    slider.style.transform = `translateX(${translateX}px)`;
    requestAnimationFrame(animateSlider);
  }

  animateSlider();
</script>

